<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 标签选中时的背景 -->
    <item android:state_selected="false">
        <shape>
            <stroke android:width="@dimen/dp_1" android:color="#59403e3e" />
            <corners android:topLeftRadius="@dimen/dp_14" android:topRightRadius="@dimen/dp_14" android:bottomLeftRadius="@dimen/dp_14" android:bottomRightRadius="@dimen/dp_14" />
        </shape>
    </item>
    <!-- 标签的正常背景 -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="#ffff8423" />
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">3</item>
            <item android:name="android:shadowColor">#59378423</item>
            <corners android:topLeftRadius="@dimen/dp_14" android:topRightRadius="@dimen/dp_14" android:bottomLeftRadius="@dimen/dp_14" android:bottomRightRadius="@dimen/dp_14" />
        </shape>
    </item>
</selector>