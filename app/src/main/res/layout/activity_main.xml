<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="不可选中" />

        <Button
            android:id="@+id/btn_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="单选(可反选)" />

        <Button
            android:id="@+id/btn_single_irrevocably"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="单选(不可反选)" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_multi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="多选" />

        <Button
            android:id="@+id/btn_multi_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="多选(最多5个)" />

        <Button
            android:id="@+id/btn_multi_compulsory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="多选(1,2必选)" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_un_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="取消选中" />

        <Button
            android:id="@+id/btn_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="点击" />
    </LinearLayout>


    <com.donkingliang.labels.LabelsView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#999999"
        android:id="@+id/labels"
        android:layout_gravity="center"
        android:layout_width="@dimen/dp_333"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:minHeight="@dimen/dp_27"
        app:labelBackground="@drawable/label_bg"
        app:labelTextColor="@drawable/label_text_color"
        app:labelTextPaddingBottom="0dp"
        app:labelTextPaddingLeft="0dp"
        app:labelTextPaddingRight="0dp"
        app:labelTextPaddingTop="0dp"
        app:labelTextSize="@dimen/sp_12"
        app:lb_dy="@dimen/dp_3"
        app:lb_shadowRadius="@dimen/dp_5"
        app:lb_cornerRadius="@dimen/dp_14"
        app:lb_dx="0dp"
        app:lb_has_shadow="true"
        app:maxSelect="0"
        app:selectType="SINGLE"
        app:fixWidth="@dimen/dp_90"
        app:fixHeight="@dimen/dp_27"
        app:lineMargin="@dimen/dp_22"
        app:wordMargin="@dimen/dp_22" />
</LinearLayout>
